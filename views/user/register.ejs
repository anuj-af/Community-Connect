<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Community-Connect</title>
    
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <main class="w-full flex">
        <div
          class="relative flex-1 hidden items-center justify-center h-screen bg-gray-900 lg:flex"
        >
          <div class="relative z-10 w-full max-w-md">
            <img src="/assets/Logo1.png" width="150" />
            <div class="mt-40 space-y-3">
              <h3 class="text-white text-3xl font-bold">
                Welcome to Community-Connect üêã
              </h3>
              <p class="text-gray-300">
                "Welcome to Community Connect: Where users create, join, and thrive in vibrant communities. Explore, engage, and connect through shared interests and meaningful interactions."
              </p>
            </div>
          </div>
          <div
            class="absolute inset-0 my-auto"
            style="
              background-image: url('https://images.unsplash.com/photo-1642787661253-058cf39dffd3?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
              background-position: center; 
              background-repeat: no-repeat;
              filter: blur(2px);
            "
          ></div>
        </div>
        <div class="flex-1 flex items-center justify-center h-screen">
          <div
            class="w-full max-w-md space-y-8 px-4 bg-white text-gray-600 sm:px-0"
          >
            <div class="">
              <img
                src="https://floatui.com/logo.svg"
                width="150"
                class="lg:hidden"
              />
              <div class="mt-5 space-y-2">
                <h3 class="text-gray-800 text-2xl font-bold sm:text-3xl">
                  Sign Up
                </h3>
                <p class="">
                  Already have an account?
                  <a
                    href="/user/login"
                    class="font-medium text-indigo-600 hover:text-indigo-500"
                    >Login</a
                  >
                </p>
              </div>
            </div>
            <div class="grid grid-cols-3 gap-x-3">
              <a href="/user/login/google"
                class="flex items-center justify-center py-2.5 border rounded-lg hover:bg-gray-50 duration-150 active:bg-gray-100"
              >
                <!-- Comment: Google Icon SVG here -->
                <img
                  src="https://raw.githubusercontent.com/sidiDev/remote-assets/7cd06bf1d8859c578c2efbfda2c68bd6bedc66d8/google-icon.svg"
                  alt="Google"
                  class="w-5 h-5"
                />
              </a>
              <a href="/user/login/github"
                class="flex items-center justify-center py-2.5 border rounded-lg hover:bg-gray-50 duration-150 active:bg-gray-100"
              >
                <!-- Comment: GitHub Icon SVG here -->
                <img
                  src="https://raw.githubusercontent.com/sidiDev/remote-assets/0d3b55a09c6bb8155ca19f43283dc6d88ff88bf5/github-icon.svg"
                  alt="Github"
                  class="w-5 h-5"
                />
              </a>
            </div>
            <div class="relative">
              <span class="block w-full h-px bg-gray-300"></span>
              <p
                class="inline-block w-fit text-sm bg-white px-2 absolute -top-2 inset-x-0 mx-auto"
              >
                Or continue with
              </p>
            </div>
            <form action="/user/register" method="post"  class=" row g-3 needs-validation space-y-5" novalidate enctype="multipart/form-data">
              <div class="flex items-center space-x-6">
                <div class="shrink-0">
                  <img id='preview_img' class="h-16 w-16 object-cover rounded-full" src= "https://img.freepik.com/free-photo/3d-portrait-people_23-2150794029.jpg?t=st=1718601772~exp=1718605372~hmac=e7f53db83aa6b891c9ceeb849a8a6866465aa530d92a8d2533ae9a3da82cef59&w=1060" alt="Current profile photo" />
                </div>
                <label class="block">
                  <span class="sr-only">Choose profile photo</span>
                  <input type="file" onchange="loadFile(event)" class="block w-full text-sm text-slate-500
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-full file:border-0
                    file:text-sm file:font-semibold
                    file:bg-violet-50 file:text-violet-700
                    hover:file:bg-violet-100
                  "
                  name="userImage"
                  id="userImage"/>
                </label>
              </div>
              <div>
                  <label for="username" class="font-medium form-label">Username</label>
                  <input type="text" class="form-control w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-indigo-600 shadow-sm rounded-lg" id="username" name="username" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
              </div>
              <div>
                <label for="email" class="font-medium form-label">Email</label>
                <input type="email" class="form-control w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-indigo-600 shadow-sm rounded-lg" id="email" name="email" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div>
                <label for="password" class="font-medium form-label">Password</label>
                <input type="password" class="form-control w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-indigo-600 shadow-sm rounded-lg" id="password" name="password" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <button
                class="w-full px-4 py-2 text-white font-medium bg-indigo-600 hover:bg-indigo-500 active:bg-indigo-600 rounded-lg duration-150"
              >
                Signup
              </button>
            </form>
          </div>
        </div>
      </main>

      <!-- Profile Uploader Script -->
      <script>
        var loadFile = function(event) {
            
            var input = event.target;
            var file = input.files[0];
            var type = file.type;
      
           var output = document.getElementById('preview_img');
      
      
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function() {
                URL.revokeObjectURL(output.src) // free memory
            }
        };
      </script>
      <!-- Bootstrap JS CDN -->
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"></script>
      <script src="/javascripts/validationForm.js"></script>
</body>
</html>
