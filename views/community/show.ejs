                                  <input class="hidden" type="file" onChange="dragNdrop(event,'<%=post._id%>')"  ondragover="drag('<%=post._id%>')" ondrop="drop('<%=post._id%>')" id="uploadFile-<%=post._id%>"  name="postImage"/>
                                  </span>
                                </div>
                                <div id="preview-<%=post._id%>"></div>
                              </div>

                              <label class="sr-only" for="title-<%= post._id %>">Title</label>
                              <input
                                class="w-full rounded-lg border border-gray-300 p-3 text-sm "
                                placeholder="Title"
                                type="text"
                                id="title-<%= post._id %>"
                                value="<%= post.title %>"
                                name="title"
                              />

                            <div>
                              <label class="sr-only" for="content-<%= post._id %>">Content : </label>

                              <textarea
                                class="w-full rounded-lg border border-gray-300 p-3 text-sm"
                                placeholder="Message"
                                rows="8"
                                id="content-<%=post._id %>"
                                name="content"
                              ><%=post.content %></textarea>
                            </div>

                            <div class="mt-4">
                              <button
                                type="submit"
                                class="inline-block w-full rounded-lg  bg-indigo-600 px-5 py-3 font-medium text-white sm:w-auto
                                transition-all duration-300 hover:shadow-gray-100 hover:bg-indigo-700"
                              >
                                Save Changes
                              </button>
                              <button
                                type="submit"
                                class="inline-block w-full rounded-lg bg-gray-500 px-5 py-3 font-medium text-white sm:w-auto
                                transition-all duration-300 hover:shadow-gray-300 hover:bg-gray-600"
                                onclick="toggleEditForm('<%= post._id %>')"
                                >
                                Cancel
                              </button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </section>
                </form>
            </div>
            <% } %>
          </article>
        </div>
      <% }%>
      <%}%> 
    </div>

    <div class="my-8 mx-4">
      <div id="sideDesc" class="sticky inset-y-0 top-20 right-0 p-4 bg-white border border-gray-100 rounded-lg shadow sm:p-8 border-gray-100">
        <div class="flex items-center justify-between mb-4">
          <h5 class="text-xl font-bold leading-none text-gray-900 text-gray-500">All Communities</h5>
          <a href="#" class="text-sm font-medium text-indigo-600 hover:underline dark:text-indigo-500 ml-3">
            Scroll for more
          </a>
        </div>
        <div class="flow-root ">
          <ul role="list" class="divide-y divide-gray-200 overflow-y-auto h-96 no-scrollbar">
            <% for(let community of communities){ %>
              <li class="py-3 sm:py-4">
                <div class="flex items-center justify-between">
                  <div class="flex-shrink-0">
                    <img class="w-8 h-8 rounded-full" src="<%= community.image.url %>"
                      alt="Neil image">
                  </div>
                  <div class="flex-1 min-w-0 ms-4">
                    <p class="text-sm font-medium text-gray-900 truncate text-gray-500">
                      <%=community.name%>
                    </p>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      <%=community.description%>
                    </p>
                  </div>
                  <a href="/community/<%= community._id %>" class="text-sm font-medium text-indigo-600 hover:underline dark:text-indigo-500">
                    View
                  </a>
                </div>
              </li>
           <% } %>
          </ul>
        </div>
      </div>

    </div>

  </div>
  
  <script>
    function dragNdrop(event,postId) {
        var fileName = URL.createObjectURL(event.target.files[0]);
        var preview = document.getElementById(`preview-${postId}`);
        var previewImg = document.createElement("img");
        previewImg.setAttribute("src", fileName);
        previewImg.classList.add('h-full','w-full','object-cover')
        preview.innerHTML = "";
        preview.appendChild(previewImg);
    }
    function drag(postId) {
        document.getElementById(`uploadFile-${postId}`).parentNode.className = 'draging dragBox';
    }
    function drop(postId) {
        document.getElementById(`uploadFile-${postId}`).parentNode.className = 'dragBox';
    }
  </script>

  <script src="/socket.io/socket.io.js"></script>

  <script src="/javascripts/socket.js"></script>
  
  <script src="/javascripts/editPost.js"></script>
