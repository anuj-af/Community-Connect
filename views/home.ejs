  <div class="grid grid-cols-5 gap-4">
    <div id="sideMenu" class="sticky inset-y-0 top-24 left-0 flex h-screen flex-col justify-between border-e bg-white">
      <div class="inset-x-0 bottom-0 border-b border-gray-100">
        <% if (currentUser) { %>
            <a href="/user/<%=currentUser._id%>/profile" class="flex items-center gap-2 bg-white p-4 hover:bg-gray-50">
              <span class="grid h-12 w-12 place-content-center rounded-lg bg-gray-100 text-xs text-gray-600">
                <img src="/assets/profile1.png" class="h-16 w-16 object-cover rounded-full" alt="Profile Picture">
              </span>
              <div>
                <p class="text-xs">
                  <strong class="block font-medium"><%=currentUser.username%></strong>
    
                  <span><%=currentUser.email%></span>
                </p>
              </div>
            </a>
          <% } %>
      </div>

      <div class="px-4 py-2 mb-auto">
        <ul class="mt-6 space-y-1">
          <li>
            <a href="/" class="block rounded-lg bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700">
              Home
            </a>
          </li>

          <li>
            <details class="group [&_summary::-webkit-details-marker]:hidden">
              <summary
                class="flex cursor-pointer items-center justify-between rounded-lg px-4 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700">
                <span class="text-sm font-medium"> Communities </span>

                <span class="shrink-0 transition duration-300 group-open:-rotate-180">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                      clip-rule="evenodd" />
                  </svg>
                </span>
              </summary>

              <ul class="mt-2 space-y-1 px-4">
                <li>
                  <a href="#"
                    class="block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700">
                    Followed Communities
                  </a>
                </li>

                <li>
                  <a href="/"
                    class="block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700">
                    All Communities
                  </a>
                </li>
              </ul>
            </details>
          </li>

          <li>
            <a href="/community/new"
              class="block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700">
              Create Community
            </a>
          </li>

          <li>
            <details class="group [&_summary::-webkit-details-marker]:hidden">
              <summary
                class="flex cursor-pointer items-center justify-between rounded-lg px-4 py-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700">
                <span class="text-sm font-medium"> Account </span>

                <span class="shrink-0 transition duration-300 group-open:-rotate-180">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                      d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                      clip-rule="evenodd" />
                  </svg>
                </span>
              </summary>

              <ul class="mt-2 space-y-1 px-4">
                <li>
                  <a href="#"
                    class="block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700">
                    Details
                  </a>
                </li>

                <li>
                  <a href="#"
                    class="block rounded-lg px-4 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700">
                    Security
                  </a>
                </li>

                <li>
                  <% if (currentUser) { %>
                    <form action="/user/logout">
                      <button type="submit"
                        class="w-full rounded-lg px-4 py-2 text-sm font-medium text-gray-500 [text-align:_inherit] hover:bg-gray-100 hover:text-gray-700">
                        Logout
                      </button>
                    </form>
                  <% } %>
                </li>
              </ul>
            </details>
          </li>
        </ul>
      </div>

      <div class="sticky inset-x-0 bottom-0 border-t border-gray-100 bg-white p-2">
        <% if (currentUser) { %>
          <form action="/user/logout">
            <button type="submit"
              class="group relative flex w-full rounded-lg px-2 py-1.5 text-sm text-gray-500 hover:bg-gray-50 hover:text-gray-700">
              <svg xmlns="http://www.w3.org/2000/svg" class="size-5 opacity-75" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
              <span
                class="invisible absolute start-full top-1/2 ms-4 -translate-y-1/2 rounded bg-gray-900 px-2 py-1.5 text-xs font-medium text-white group-hover:visible">
                Logout
              </span>
            </button>
          </form>
        <% } %>
      </div>
    </div>


    <div class="my-4 mx-4 col-span-3">
      <% if (currentUser) { %>
        <% for(let community of user.followings) { %>
          <% for(let post of community.posts) { %>
            <div class="my-4">
              <article class="size-full overflow-hidden rounded-lg shadow transition hover:shadow-lg">
                <div class="bg-white p-4 sm:p-4">
                  <a href="/community/<%= community._id%>">
                  <div class="flex-shrink-0">
                    <img class="w-8 h-8 rounded-full inline" src="<%= community.image.url%>"
                      alt="Neil image">
                    <p class="block text-xs text-gray-500 inline">Posted in community : <%=community.name%></p>
                  </div>
                </a>
                </div>
                <div class="bg-white p-4 sm:p-6">
                  <a href="/community/<%= community._id%>">
                    <h3 class="mt-0.5 text-lg text-gray-900"><%= post.title %></h3>
                  </a>
                  
                  <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
                    <%= post.content %>
                  </p>
                  <% if (post.image.url) { %>
                      <img alt=""
                        src="<%=post.image.url%>"
                        class="h-56 w-full object-cover" style="border-radius: 12px;margin-bottom: 10px;margin-top: 10px;" />
                  <% } %>
                </div>
                <div class="mb-3 mx-4"> 
                  <div class="flex items-center space-x-4">
                    <button class="p-2 border rounded-full hover:bg-gray-100" id="upbtn-<%=post._id%>" onclick="upvote('<%=post._id%>','<%=currentUser._id%>')">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
                        </svg>
                    </button>
                    <p class="inline" id="upcount-<%=post._id%>"><%= post.upvotes ? post.upvotes.length : 0 %></p>
                    <button class="p-2 border rounded-full hover:bg-gray-100" id="dwnbtn-<%=post._id%>" onclick="downvote('<%=post._id%>','<%=currentUser._id%>')">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <p class="inline" id="downcount-<%=post._id%>"><%= post.downvotes ? post.downvotes.length : 0 %></p>
                  </div>
                </div>
              </article>
            </div>
          <% }%> 
        <% } %>
      <%} else { %>
        <% for(let community of communities) { %>
          <% if (community.category==="public") { %>
            <% for(let post of community.posts) { %>
              <div class="my-4">
                <article class="size-full overflow-hidden rounded-lg shadow transition hover:shadow-lg">
                  <a href="/community/<%= community._id%>">
                  <div class="bg-white p-4 sm:p-4">
                    <div class="flex-shrink-0">
                      <img class="w-8 h-8 rounded-full inline" src="<%= community.image.url%>"
                        alt="Neil image">
                      <p class="block text-xs text-gray-500 inline">Posted in community : <%=community.name%></p>
                    </div>
                  </div>
                  </a>
                  <div class="bg-white p-4 sm:p-6">
                    <a href="/community/<%= community._id%>">
                      <h3 class="mt-0.5 text-lg text-gray-900"><%= post.title %></h3>
                    </a>
                    
                    <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
                      <%= post.content %>
                    </p>
                    <% if (post.image.url) { %>
                      <img alt=""
                        src="<%=post.image.url%>"
                        class="h-56 w-full object-cover" style="border-radius: 12px;margin-bottom: 10px;margin-top: 10px;" />
                    <% } %>
                  </div>
  
                </article>
              </div>
            <% }%> 
           
          <% } %>
        <% } %>
       <% } %>

    </div>

    <div class="my-8 mx-4">
      <div id="sideDesc" class="sticky inset-y-0 top-20 right-0 p-4 bg-white border border-gray-100 rounded-lg shadow sm:p-8 border-gray-100">
        <div class="flex items-center justify-between mb-4">
          <h5 class="text-xl font-bold leading-none text-gray-900 text-gray-500">All Communities</h5>
          <div class="text-sm font-medium text-blue-600 ml-3">
            Scroll for more
          </div>
        </div>
        <div class="flow-root ">
          <ul role="list" class="divide-y divide-gray-200 overflow-y-auto h-96 no-scrollbar">
            <% for(let community of communities){ %>
              <li class="py-3 sm:py-4">
                <div class="flex items-center justify-between">
                  <div class="flex-shrink-0">
                    <img class="w-8 h-8 rounded-full" src="<%= community.image.url %>"
                      alt="Neil image">
                  </div>
                  <div class="flex-1 min-w-0 ms-4">
                    <p class="text-sm font-medium text-gray-900 truncate text-gray-500">
                      <%=community.name%>
                    </p>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      <%=community.description%>
                    </p>
                  </div>
                  <a href="/community/<%= community._id %>" class="text-sm font-medium text-blue-600 hover:underline dark:text-blue-500">
                    View
                  </a>
                </div>
              </li>
           <% } %>
          </ul>
        </div>
      </div>

    </div>

  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/socket.js"></script>
</body>

</html>